generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  handle        String?   @unique
  email         String    @unique
  password      String
  emailVerified DateTime?
  bio           String?
  image         String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EnergyData {
  id                 Int                 @id @default(autoincrement())
  weekStartDate      DateTime
  year               Int
  month              Int
  week               Int
  renewableEnergy    Float
  nonRenewableEnergy Float
  totalConsumption   Float
  carbonEmissions    Float
  costSavings        Float
  sectors            SectorConsumption[]

  @@unique([year, month, week])
  @@index([year, month])
}

model SectorConsumption {
  id           Int        @id @default(autoincrement())
  sector       Sector
  consumption  Float
  energyData   EnergyData @relation(fields: [energyDataId], references: [id])
  energyDataId Int

  @@index([energyDataId])
}

enum Sector {
  RESIDENTIAL
  COMMERCIAL
  INDUSTRIAL
  TRANSPORTATION
}
