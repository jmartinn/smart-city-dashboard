generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EnergyData {
  id                 Int                 @id @default(autoincrement())
  weekStartDate      DateTime
  year               Int
  month              Int // 1 - January, 2 - February, etc.
  week               Int // Week number within the month
  renewableEnergy    Float // in GWh
  nonRenewableEnergy Float // in GWh
  totalConsumption   Float // in GWh
  carbonEmissions    Float // in kT
  costSavings        Float // in USD
  sectors            SectorConsumption[]

  @@unique([year, month, week])
  @@index([year, month])
}

model SectorConsumption {
  id           Int        @id @default(autoincrement())
  sector       Sector
  consumption  Float // in GWh
  energyData   EnergyData @relation(fields: [energyDataId], references: [id])
  energyDataId Int

  @@index([energyDataId])
}

enum Sector {
  RESIDENTIAL
  COMMERCIAL
  INDUSTRIAL
  TRANSPORTATION
}
